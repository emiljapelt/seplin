{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "inex",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#strings" },
		{ "include": "#comments" },
		{ "include": "#topdecs" },
		{ "include": "#type_args"},
		{ "include": "#args"}
		
	],
	"repository": {
		"topdecs": {
			"patterns": [{
				"begin": "reference",
				"end": ";",
				"name": "keyword",
				"match": "\\b(reference|as)\\b"
			},{
				"begin": "struct",
				"end": ";",
				"name": "keyword",
				"match": "struct",
				"patterns": [{
					"include": "type_args"
				},{
					"include": "args"
				}]
			},{
				"include": "#block"
			}]
		},
		"block": {
			"begin": "\\{",
			"end": "\\}",
			"patterns": [{
				"include": "#block_inner"
			}]
		},
		"block_inner": {
			"patterns": [{
				"include": "#block"
			},{
				"begin": "print",
				"end": ";",
				"name": "keyword",
				"match": "\\b(print)\\b"
			}]
		},
		"args": {
			"patterns": [{
				"begin": "\\(",
				"end": "\\)",
				"patterns": [{
					"include": "#types"
				},{
					"name": "constant.language",
					"match": "\\b([A-Za-z0-9]+:)\\b"
				}]
			}]
		},
		"type_args": {
			"patterns": [{
				"begin": "<",
				"end": ">",
				"patterns": [{
					"include": "#types"
				}]
			}]
		},
		"types": {
			"patterns": [{
				"name": "support.type",
				"match": "\\b([A-Z]|int|char|bool|_)\\b"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.inex",
				"match": "\\b(if|while|for|stop|halt|until|repeat|else)\\b"
			}, 
			{
				"name": "keyword",
				"match": "\\b(entry|internal|external|struct|const|stable|new)\\b"
			},
			{
				"name": "constant.language",
				"match": "\\b(true|false|null)\\b"
			},
			{
				"name": "constant.character",
				"match": "\\b('\\?.')\\b"
			},
			{
				"name": "constant.numeric",
				"match": "-?[0-9]+"
			}]
		},
		"strings": {
			"name": "string.quoted.double.inex",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.inex",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "comment.line",
			"begin": "//",
			"end": "\\n"
		}
	},
	"scopeName": "source.ix"
}